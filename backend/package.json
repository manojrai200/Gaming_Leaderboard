{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "setup-topics": "node util/setup-kafka-topics.js",
    "kafka:list": "docker exec gaming-leaderboard-kafka sh -c \"/opt/kafka/bin/kafka-topics.sh --bootstrap-server localhost:9092 --list\"",
    "kafka:describe": "docker exec gaming-leaderboard-kafka sh -c \"/opt/kafka/bin/kafka-topics.sh --bootstrap-server localhost:9092 --describe\"",
    "test:api": "bash scripts/test-api.sh",
    "benchmark": "node scripts/benchmark-response-time.js",
    "load-test": "node scripts/load-test.js",
    "throughput-test": "node scripts/test-score-throughput.js",
    "monitor:redis": "node scripts/monitor-redis.js",
    "test:latency": "node scripts/test-read-write-latency.js",
    "perf:all": "npm run benchmark && npm run load-test && npm run monitor:redis",
    "load-test:artillery": "artillery run artillery.yml",
    "load-test:report": "artillery run --output report.json artillery.yml && artillery report report.json",
    "load-test:150": "artillery run artillery-150.yml",
    "load-test:150:report": "artillery run --output report-150.json artillery-150.yml && artillery report report-150.json",
    "add-100-users": "node scripts/add-100-users-scores.js"
  },
  "keywords": [
    "gaming",
    "leaderboard",
    "kafka",
    "redis",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "description": "Production-ready real-time gaming leaderboard system with Kafka and Redis",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "artillery": "^2.0.27",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  }
}
